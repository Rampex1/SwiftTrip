<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/gradient_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/full_logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
        android:layout_gravity="center" />

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your perfect getaway"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan Your Trip"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- From Location -->
            <!-- From Location -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fromLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="From"
                app:startIconDrawable="@drawable/ic_flight_takeoff"
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/primary_blue"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/fromLocationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- To Location -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/toLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="To"
                app:startIconDrawable="@drawable/ic_flight_land"
                app:boxStrokeColor="@color/primary_blue"
                app:hintTextColor="@color/primary_blue"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/toLocationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Departure Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/departureDateLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Departure"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/departureDateEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Return Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/returnDateLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Return"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/returnDateEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!-- Passengers -->

            <!-- Search Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/passengersLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:boxBackgroundMode="outline"
                app:strokeColor="#777679"
                android:backgroundTint="@android:color/white"

                android:gravity="center"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="#777679">




                <LinearLayout
                    android:layout_marginTop="8dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person"
                        app:tint="#777679"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Passengers"
                        android:textSize="16sp"
                        android:textColor="#777679"
                        >

                    </TextView>
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:padding="16dp">



                    <!-- Adults Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/adultMinusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#777679"
                            android:paddingHorizontal="0dp"
                            android:text="-" />


                        <TextView
                            android:id="@+id/tvAdult"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="1 Adult"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/adultPlusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/primary_blue"
                            android:paddingHorizontal="0dp"
                            android:text="+" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_separator">

                    </ImageView>

                    <!-- Children Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingHorizontal="0dp">

                        <Button
                            android:id="@+id/childMinusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#777679"
                            android:paddingHorizontal="0dp"
                            android:text="-" />


                        <TextView
                            android:id="@+id/tvChild"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:gravity="center"

                            android:text="0 Children"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/childPlusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/primary_blue"
                            android:paddingHorizontal="0dp"
                            android:text="+" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Search Flights &amp; Hotels"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/primary_blue"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_search"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Quick Tips Section -->
    <LinearLayout
        android:id="@+id/tipsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/accent_light"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Quick Tips"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢ Book 2-8 weeks in advance for best deals\nâ€¢ Consider nearby airports for more options\nâ€¢ Check visa requirements for your destination by using our visa checker"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>