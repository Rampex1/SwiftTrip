<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hotel Name and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/hotelNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Le Grand Hotel Paris"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/hotelPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250/night"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue" />

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/hotelLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Champs-Élysées, 0.2km to Arc de Triomphe"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Availability -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/hotelAvailabilityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 rooms left"
                android:textSize="12sp"
                android:textColor="@color/warning_yellow"
                android:background="@drawable/chip_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
