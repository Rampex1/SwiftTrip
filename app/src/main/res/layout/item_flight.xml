<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flightCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/priceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USD 378.63"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/airlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="14sp"
                android:background="@android:color/holo_purple"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/outboundRouteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="BOS → MAD • 2 stops • PT19H50M"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/returnRouteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAD → BOS • 1 stop • PT17H41M"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/seatsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="9 seats available"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>